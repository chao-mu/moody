<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->

    <!-- The page supports only a dark color schemes -->
    <meta name="color-scheme" content="dark">

    <!-- Replace the Bootstrap CSS with the
         Bootstrap-Dark Variant CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css" rel="stylesheet">

    <script src="https://cdn.plot.ly/plotly-2.9.0.min.js"></script>

    <title>{{ title }}</title>
    <style>

    </style>
  </head>
  <body>
    <div class="container page">

      <div class="row">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <h1>{{ title }}</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-12 d-flex align-items-center justify-content-center">
            <div id="senator-sentiment"></div>
        </div>
      </div>

      <!--div class="row">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <div class="gauge">
            <div class="gauge__body">
              <div class="gauge__fill" style="transform: rotate({{666 / 2}}turn);"></div>
              <div class="gauge__cover">
                {{ (666 * 100) | round(2, 'floor') }}
              </div>
            </div>
          </div>
        </div>
      </div-->
    </div>
    <script>
        var trace1 = {
          type: "scatter",
          mode: "lines+markers",
          name: 'Republican',
          x: {{ sentiments_x }}["Republican"],
          y: {{ sentiments_y }}["Republican"],
          line: {color: '#FF0803'}
        };

        var trace2 = {
          type: "scatter",
          mode: "lines+markers",
          name: 'Democrat',
          x: {{ sentiments_x }}["Democrat"],
          y: {{ sentiments_y }}["Democrat"],
          line: {color: '#0000FF'}
        };

        var layout = {
            title: 'US Senators',
            paper_bgcolor: '#222',
            plot_bgcolor: '#3b3b3b',
            font: {color: "white"}
        };

        var data = [trace1, trace2];
        Plotly.newPlot('senator-sentiment', data, layout);
    </script>
  </body>
</html>
